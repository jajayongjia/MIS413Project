<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ualberta.mis413project.Register">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="446dp"
        android:layout_height="665dp"
        app:srcCompat="@drawable/canada_flag_leaves_maple_cool_53132_750x1334"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-29dp"
        android:layout_marginLeft="-10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="-10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-30dp"
        app:layout_constraintVertical_bias="0.353" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="111dp"
        android:fontFamily="cursive"
        android:text="Be Canadian"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        android:textColor="#640000"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/userID"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:background="#33f7fafb"
        android:ems="10"
        android:hint="User name"
        android:textColorHint="#FFFFFF"


        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:background="#33f7fafb"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"


        android:lineSpacingExtra="8sp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/userID" />

    <Button
        android:id="@+id/register"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="8dp"
        android:background="#00f7fafb"
        android:fontFamily="cursive"
        android:text="Register"
        android:textColor="#fbefef"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/trysignin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="120dp"
        android:background="#00f7fafb"
        android:fontFamily="cursive"
        android:text="Try Sign In?"
        android:textColor="#fbefef"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:fontFamily="cursive"
        android:text="Let's VOTE!"
        android:textColor="#fbefef"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/userID"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.671" />


</android.support.constraint.ConstraintLayout>


